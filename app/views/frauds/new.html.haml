.row
  .col-md-1
  .col-md-5
    + add fraud
    %br
      %br
    =form_for Fraud.new do |f|
      = f.text_field :firstname, placeholder: 'firsname'
      %br
      = f.text_field :lastname, placeholder: 'lastname'
      %br
      = f.text_field :patronymic,placeholder: 'patronymic'
      %br
      = f.text_field :icq,placeholder: 'icq'
      %br
      = f.text_field :type,placeholder: 'type'
      %br
      = f.text_field :name,placeholder: 'name'
      %br
      = f.text_area :description,placeholder: 'description'
      %br
      -#= f.text_field :cards,placeholder: 'card', value: ''
      =f.fields_for :cards do|cards_form|
        = cards_form.text_field :card1,placeholder: 'card'
        %br
        = cards_form.text_field :card2,placeholder: 'card'
        %br
      =f.fields_for :phones do|phones_form|
        = phones_form.text_field :phone1,placeholder: 'phone'
        %br
      =f.fields_for :emails do|emails_form|
        = emails_form.text_field :email1,placeholder: 'email'
        %br
      =f.fields_for :skypes do|skypes_form|
        = skypes_form.text_field :skype1,placeholder: 'skype'
        %br
      =f.fields_for :cities do|cities_form|
        = cities_form.text_field :city1,placeholder: 'city'
        %br
      =f.fields_for :regions do|regions_form|
        = regions_form.text_field :region1,placeholder: 'region'
        %br
      -#=f.fields_for :descriptions do|descriptions_form|
      -#  = descriptions_form.text_erea :description1,placeholder: 'description'
      -#  %br
      =f.submit class: "btn btn-submit"